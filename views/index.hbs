
<div class="row justify-content-md-center">
    <div class="col-md-6">
        <form method="post" action="/" id="sign-form" class="mt-5">
            <div class="form-group">
                <label for="idNumber">ID Number</label>
                <input type="text" class="form-control" autocomplete="false" id="idNumber" name="idNumber" required>
            </div>
            <div class="form-group">
                <label for="emailAddress">Email Address</label>
                <input type="email" class="form-control" autocomplete="false" id="emailAddress" name="emailAddress" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" autocomplete="false" id="password" name="password" required>
            </div>
            <div class="form-check pb-4">
                <input class="form-check-input" type="checkbox" checked name="displayOnSite" id="displayOnSite">
                <label class="form-check-label text-muted" for="displayOnSite">
                    &nbsp; Verify identity
                </label>
            </div>
            <input type="submit" value="Sign In" class="btn btn-secondary btn-lg btn-block" />
        </form>
    </div>
</div>
